ACTIVITY  1: Animal Inheritance

class Animal {
    void speak() {
        System.out.println("Animal makes a sound");
    }
}

class Dog extends Animal {
    void speak() {
        System.out.println("Dog barks");
    }
}

class Cat extends Animal {
    void speak() {
        System.out.println("Cat meows");
    }
}



activity 2 vehicle class 

class Vehicle {
    String brand;
    int fuel;

    Vehicle(String brand, int fuel) {
        this.brand = brand;
        this.fuel = fuel;
    }
}

class Car extends Vehicle {
    int doors;

    Car(String brand, int fuel, int doors) {
        super(brand, fuel);
        this.doors = doors;
    }

    void drive() {
        if (fuel > 0) {
            fuel--;
            System.out.println(brand + " is driving. Fuel left: " + fuel);
        } else {
            System.out.println("No fuel left!");
        }
    }
}

public class Main {
    public static void main(String[] args) {
        Car myCar = new Car("Toyota", 5, 4);
        myCar.drive();
    }
}   
     
    
